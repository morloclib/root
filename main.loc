--' metavar: BOOL
type Bool

--' A map with keys of type `a` and values of type `b`
--' metavar: MAP
type Map a b

--' A homogenous list
--' metavar: LIST
type List a

--' A 2 element tuple
--' metavar: TUPLE2
type Tuple2 a b

--' A 3 element tuple
--' metavar: TUPLE3
